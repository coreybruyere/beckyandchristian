---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import i18next, { t, changeLanguage } from "i18next";
import { Trans, HeadHrefLangs } from "astro-i18next/components";

changeLanguage("en");
---

<!DOCTYPE html>
<html lang={i18next.language}>
  <head>
    <BaseHead title={t("home.title")} description={SITE_DESCRIPTION} />
    <HeadHrefLangs />
  </head>
  <body>
    <Header title={t("home.title")} />

    <main>
      <div class="container">
        <h1>{t("home.title")}</h1>
        <p style={{ fontSize: "clamp(1.25rem, 2vw + 1rem, 1.75rem);" }}>
          <Trans i18nKey="home.subtitle">
            Please share your photos with us by using this website to upload
            photos for Becky and Christian's wedding! You can find links to
            their wedding registry and wedding schedule here as well!
          </Trans>
        </p>
        <div class="stack">
          <a
            href="https://weduploader.com/upload/qrPj3Y7KpVAfI1Jb"
            class="button">Photo Upload</a
          >
          <a
            href="https://withjoy.com/becky-and-christian-ckwycmkxr000s06apwe3d4647/registry"
            class="button">Wedding Registry</a
          >
          <a
            href="https://withjoy.com/becky-and-christian-ckwycmkxr000s06apwe3d4647/story"
            class="button">Wedding Info</a
          >
          <a href="/song" class="button">Sing a Song</a>
        </div>
      </div>
      <img class="img" src="./public/ct+b.jpg" alt="Christian and Becky" />
    </main>

    <footer class="container footer">
      <Trans i18nKey="home.smallFooter">
        Having issues with photo upload? Feel free to <a
          href="https://drive.google.com/drive/folders/1v7Pn2NTIcdxFhGxUnFbVF-ClDzY26nYy?usp=sharing"
        ></a>upload to Google Photos</Trans
      >
    </footer>

